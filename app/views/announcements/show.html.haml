- content_for(:title){@announcement.title}

= render "sessions/page_header", item: @announcement
.text-page-article-box.shadow.margin-bottom
  .text-page-main-content
    - if @announcement.has_video?
      .announcement-cover.pull-right
        = render "shared/sublime_video", item_resource: @announcement, poster_url: @announcement.cover.url
    - elsif @announcement.cover_file_name
      .announcement-cover.pull-right
        = image_tag @announcement.cover.url
    %p= @announcement.description.html_safe
    .clear-fix
