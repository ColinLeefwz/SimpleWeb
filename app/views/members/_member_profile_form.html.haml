.edit-profile-title
  %h3 Edit your profile

= form_for @member, as: :profile, url: update_profile_member_path(current_user), remote: true, :html => { :class => "form-horizontal"} do |f|

  .form-group
    .col-sm-4.col-xs-4
      = f.label :first_name, class: "control-label"
    .col-sm-12.col-xs-12
      = f.text_field :first_name, :autofocus => true, class: 'form-control'
  .form-group
    .col-sm-4.col-xs-4
      = f.label :last_name, class: "control-label"
    .col-sm-12.col-xs-12
      = f.text_field :last_name, :autofocus => true, class: 'form-control'

  .form-group.user_name
    .col-sm-4.col-xs-4
      = f.label :user_name, class: "control-label"
    .col-sm-12.col-xs-12
      = f.text_field :user_name, :autofocus => true, class: 'form-control'
      %span.uniqueness

  .form-group
    .col-sm-4.col-xs-4
      = f.label :email, class: "control-label"
    .col-sm-12.col-xs-12
      = f.email_field :email, class: 'form-control', id: "email"

  .form-group
    .col-sm-4.col-xs-4
      = f.label :profile_picture, class: "control-label"
    .col-sm-12.col-xs-12
      = f.file_field :avatar

  = fields_for @profile do |p|
    .form-group
      .col-sm-4.col-xs-4
        = p.label :title, class: "control-label"
      .col-sm-12.col-xs-12
        = p.text_field :title, :autofocus => true, class: 'form-control'

    .form-group
      .col-sm-4.col-xs-4
        = p.label :organization, class: "control-label"
      .col-sm-12.col-xs-12
        = p.text_field :company, class: 'form-control'

    .form-group
      .col-sm-4.col-xs-4
        = p.label :country, class: "control-label"
      .col-sm-12.col-xs-12
        = p.country_select :country, ["China", "United States", "Italy"]

    .form-group
      .col-sm-4.col-xs-4
        = p.label :city, class: "control-label"
      .col-sm-12.col-xs-12
        = p.text_field :city, class: 'form-control'

    .form-group
      .col-sm-4.col-xs-4
        = f.label :time_zone, class: "control-label"
      .col-sm-12.col-xs-12
        = f.time_zone_select :time_zone

    .form-group
      .col-sm-12.col-xs-12
        = f.submit "update", class: 'btn btn-prodygia dashboard-buttons', id: "update"
        = link_to "Cancel", activity_stream_member_path(current_user), remote: true, class: 'btn dashboard-buttons'

:javascript
  user_name_uniqueness()
  email_confirm()
