= simple_form_for @member, as: :profile, url: update_profile_member_path(current_user), remote: true do |f|
  %h3 Edit your profile
  %fieldset
    -# %legend Overview
    = f.input :first_name
    = f.input :last_name
    .string.optional.customize-label.input
      = f.label :profile_picture
      = f.input_field :avatar
    = simple_fields_for @profile do |p|
      = p.input :title
      .string.optional.customize-label.input
        = p.label :organization
        = p.input_field :company
      .string.optional.customize-label
        = p.input :country, priority: ["China", "United States", "Italy"]
        = p.input :city
      = f.input :time_zone

    .display-block
      = f.submit "update", class: 'btn btn-prodygia dashboard-buttons'
      = link_to "Cancel", activity_stream_member_path(current_user), remote: true, class: 'btn dashboard-buttons'
