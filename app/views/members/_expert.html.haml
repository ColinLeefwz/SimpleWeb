-if @recommendation
  .recommendation.white-background.shadow
    Recommended
- @followed_experts.each do |e|
  .expert-action-box.shadow.white-background
    .expert-info
      .expert-avatar
        = link_to image_tag(e.avatar.url), profile_expert_path(e)
      .expert-text-info
        .expert-name
          = link_to e.name, profile_expert_path(e)
        .expert-title
          #{empty_expert_info_filter(e.profile.title, e.profile.company)}
    .expert-actions
      .follow-star
        = render 'shared/favorite_star', method: :follow?, object: e, link_path: relationship_path(e)
      .clear-fix
      .expert-action-info
        .block-title
          %span RECENT ACTIVITY
          - e.contents.take(3).each do |content|
            .recent-activity
              .course-icon
                - if content.is_a? ArticleSession
                  = link_to image_tag(content.cover), session_path(content)
                - elsif content.is_a? VideoInterview
                  = link_to image_tag(content.cover), video_interview_path(content)
              .course-info
                .action
                  Posted
                .title
                  - if content.is_a? ArticleSession
                    = link_to content.title, session_path(content)
                  - elsif content.is_a? VideoInterview
                    = link_to content.title, video_interview_path(content)
              .published-time
                -# = distance_of_time_in_words_to_now(content.updated_at)
                = time_ago_in_words(content.updated_at)
                = "ago"
      .see-more
        =link_to "see more", profile_expert_path(e)

