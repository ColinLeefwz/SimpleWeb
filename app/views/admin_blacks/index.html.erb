<h1>举报用户</h1>

<table border="1">
  <tr>
    <th>名称</th>
    <th>详情</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td>
        <% user.reports_s.each do |u| %>
          <%= u['cat'].localtime.strftime("%Y-%m-%d %H:%M:%S")%>,
          <%= link_to u['id'], "/admin_users/human_chat?id=#{user.id.to_s}&uid=#{u["id"]}" %>,
          <%= User.find_by_id(u['id']) ? User.find_by_id(u['id']).name : "null(删除)"   %>
          <br/>
        <%end%>
      </td>
    </tr>

  <% end %>
</table>
<br />

