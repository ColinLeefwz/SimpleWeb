  <div class="title1"><h2 class="f18">编辑优惠券</h2></div>

  <%= form_for(@coupon, :url => "/shop3_share_coupons/update?id=#{@coupon.id}",:html => { :multipart => true, :id => 'Forms' } ) do |f| %>
    <%= render :partial => 'imgtext', :locals => {:f => f}  %>
  <% end %>
</div>

<script type="text/javascript" src="/javascripts/imgUploadPreview.js"></script>
<script src="/newbackstage/js/coupon.js" type="text/javascript"></script>
<script defer="defer">
  $(document).ready(function(){
    imgUploadPreview("input[name='coupon[img2]']", 'uploadPreview');
    runing=$("#CB1").attr("class");
    if(runing=="checkboxs1"){
      NavDiv();
      $(window).load(function(){
        MessageDiv();
      });
    }else if(runing=="checkboxs2"){
      AllNoDH();
    }

    $("input[name='coupon[img2]']").click(function(){
      imgUploadPreview(this, 'uploadPreview');
    });
    $("#uploadPreview").click(function(){
      $("#shop_coupon_img").click();
    });
  });
</script>