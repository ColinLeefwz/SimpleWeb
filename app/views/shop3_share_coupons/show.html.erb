<div class="con">
  <div class="title1"><h2 class="f18">优惠券详情</h2></div>
  <div class="box6">
    <div class="boxinner">
      <% if !@coupon.img.blank? %>
        <%=image_tag(@coupon.img,:style=>"width:100%;height:100%;")%>
      <% else %>
        <div class="btn4 auto">
          <img id="image_view" style="width:100%;height:100%;" src="/newbackstage/images/pic16_1.jpg"/>
        </div>
        <div class="box6right1">
          <span class="inputs2 block"><%=  @coupon.name  %></span>
          <span class="textarea3 block"><%= @coupon.desc %></span>
        </div>
      <% end %>
    </div>
    <div class="box6date">XXXX-XX-XX XX:XX</div>
  </div>
  <div class="clear1"></div>
  <div class="box7 mt0">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab1 gay2">
      <tr class="change">
        <td width="43%">发放规则：<%= @coupon.show_rule %></td>
        <% if [1,3].include?(@coupon.rule.to_i) %>
          <td width="57%"><%= rulev_lable(@coupon.rule.to_i) %><%= @coupon.rulev%></td>
        <% end %>
      </tr>

      <tr class="change">
        <td width="43%">触发条件：<%= @coupon.show_scd %></td>
      </tr>

      <tr class="change">
        <td width="43%">
          <% if @coupon.scd==0 %>
            <%= "关键字：#{@coupon.text}"  %>
          <% elsif @coupon.scd == 1 %>
            <%= "指定问答：#{@coupon.faq_od} => #{@coupon.faq_title}" %>
          <% end %>
        </td>
      </tr>
      <tr class="change">
        <td colspan="2">使用流程：<%= ['展示优惠券，点击后既代表使用了','展示优惠券，点击后按要求输入内容，然后确定使用'][@coupon.hint.blank? ? 0 : 1] %></td>
      </tr>
      <% unless @coupon.hint.blank? %>
        <tr class="change">
          <td colspan="2">使用时输入内容提示：<%= @coupon.hint%></td>
        </tr>
      <% end %>
    </table>
    <div class="box7plane1 pt30 mb50">
      <%= link_to '返 回', '/shop3_coupons/list', :class=>"btn2" %>
    </div>
  </div>
</div>