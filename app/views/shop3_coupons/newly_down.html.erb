function Send(obj){
	$(obj).attr("title","发送中").removeClass().addClass("sign2");
	setTimeout(function(){
		$(obj).attr("title","").removeClass().html("重发完成");
		setTimeout(function(){
			$(obj).attr("title","发送").removeClass().addClass("sign1").html("");
		},2000);
	},3000);
}

function resend(obj, down_id){
	$.get("/shop_coupons/resend", {id: down_id}, function(){
	  obj.replaceWith("已发送")
	});
}
