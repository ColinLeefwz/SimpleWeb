<div class="box6 visible">
  <div class="box6message" id="Box6Message"><%= notice%></div>
  <div class="boxinner">
    <input type="hidden" name="coupon[t]" value="1"/>
    <a class="btn4 hidden">
      <% if params[:coupon] && params[:coupon][:img2]  %>
        <%= image_tag params[:coupon][:img2], :width=>"195", :id=>"CropedImg" %>
        <%= f.hidden_field(:img2, :value => params[:coupon][:img2])%>
      <% else %>
        <%= image_tag @coupon.img2.blank? ?  '/newbackstage/images/pic6.jpg' : @coupon.img2 , :width=>"195", :id=>"CropedImg" %>
      <% end %>
    </a>
    <div class="box6right1">
      <%= f.text_field :name, :value => @coupon.name || '优惠券主题 不得超过13个文字', :class => 'inputs2 inputchange'%>
      <%= f.text_area :desc, :value => @coupon.desc || '优惠额度，使用规则、期限等，不超过90字', :class => 'textarea3 textareachange', :style=>"word-wrap:normal;", :wrap=>"off";%>
    </div>
  </div>
  <div class="box6number">X-XXXX</div>
	<div class="box6date">XXXX-XX-XX&nbsp;&nbsp;XX:XX</div>
</div>

<div class="clear1"></div>
