<div class="title2"><h2>屏蔽的用户</h2></div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="13%" align="left">用户</th>
    <th width="10%" align="center">性别</th>
    <th width="13%" align="center">生日</th>
    <th width="10%" align="center">微博</th>
    <th width="10%" align="center">操作</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name  %></td>
      <td align="center"><%= img_gender(user.gender)  %></td>
      <td align="center"><%= age(user.birthday.try(:to_date)) %></td>
      <td align="center"><%= link_to '微博',user.try(:weibo_home) %></td>
      <td align="center"><%= link_to '解除',"/shop_bans/unban?uid=#{user.id.to_s}&page=#{params[:page]}", :onclick => "return confirmUnban()" %></td>
    </tr>
  <% end %>
</table>

<div class="pages mt15">
  <%= generate_paginate.html_safe %>
</div>

<script>
  LeftMenu(21);
  function confirmUnban(){
    if(confirm("确定需要批量删除商家？"))
      return true
    else
      return false
  }
</script>