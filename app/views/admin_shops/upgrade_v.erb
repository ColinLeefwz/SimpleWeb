<h1>"<%= @shop.name %>"增加权重</h1>
<style type="text/css">
  *{ padding:0; margin:0;}
  .box{ width:400px; margin:30px 0px;}
  .box p{ text-align:center;}
  #dragBox{ width:254px; height:30px; background:url(/images/moveDragBg.jpg) no-repeat 4px 8px; position:relative; float:left;}
  #moveBox{ width:26px; height:38px; background:url(/images/moveBtn.png) no-repeat 0 0; position:absolute; top:0; left:0;}
  .moveBox{ margin-left:40px;}
  .moveBox .p1{ float:left; padding:6px;}
  .moveBox .p2{ float:left; padding:6px;}
</style>

<%= form_for(@shop, :url => '/admin_shops/upgrade_v', :html => {:method => "post"}) do |f| %>
  <p>
    增加权重：
  </p>
  <br/>
  <div class="box">
    <div class="moveBox">
      <p class="p1">0</p>
      <div id="dragBox">
        <div id="moveBox"></div>
      </div>
      <p class="p2" id="p2">100</p>
    </div>
  </div>
  <%= hidden_field_tag :id, @shop.id.to_i %>
  <div>
    <%= f.text_field :v, :value=> @shop.v.to_i, :style => "width:30px;border:1px solid olive;", :id => 'value1'  %>
  </div>
  <br/>
  <div>
    <%= f.submit "确认" %>
  </div>
<% end %>


<script type="text/javascript">

  window.onload=function()
  {
    var oP2=document.getElementById('p2');
    var iNum=parseInt(oP2.innerHTML);
    var oInp=document.getElementById('value1');
    var oDragBox=document.getElementById('dragBox');
    var oMoveBox=document.getElementById('moveBox');
    oMoveBox.style.left=(oInp.value/100*228)+"px";
    oInp.onchange = function(){
      p = parseInt(oInp.value);
      if(p< 0){p=0}
      else if(p>100){p=100}
      le=oDragBox.offsetWidth-oMoveBox.offsetWidth;
      oMoveBox.style.left=le*(p/100)+"px";
      oInp.value = p;
    }

    oMoveBox.onmousedown=function(ev)
    {	var oratio=null;
      var oEvent=ev||event;
      var oEventLeft=oEvent.clientX;
      var oldLeft=oEventLeft-oMoveBox.offsetLeft;
      document.onmousemove=function(ev)
      {
        var oEvent=ev||event;
        var l=oEvent.clientX-oldLeft;
        if(l<0)
        {
          l=0;
        }
        else if(l>oDragBox.offsetWidth-oMoveBox.offsetWidth)
        {
          l=oDragBox.offsetWidth-oMoveBox.offsetWidth;
        }
        else
        {
          oMoveBox.style.left=l+"px";
        }
        oratio=l/(oDragBox.offsetWidth-oMoveBox.offsetWidth);
        oInp.value=parseInt(oratio*iNum);
        return false;
      }
      document.onmouseup=function()
      {
        document.onmousemove=null;
        document.onmouseup=null;
      }
      return false;
    }
  }
  function absXy(obj)
  {
    var x=obj.offsetLeft,y=obj.offsetTop;
    while(obj=obj.offsetParent)
    {
      x +=obj.offsetLeft;
      y +=obj.offsetTop;
    }
    var arr={"x":x,"y":y};
    return arr;
  }
</script>