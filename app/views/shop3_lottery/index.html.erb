<div class="con2">
  <div class="title1 mb30"><h2 class="f18 l">刮刮卡管理</h2></div>
  <div style="color:green;font-size:20px;text-align:center;"><%= flash[:notice] %></div>
  <div class="submenu">
    <ul>
      <li><a href="/shop3_lottery/new">添加活动</a></li>
    </ul>
  </div>


  <table width="100%" cellpadding="0" cellspacing="0" class="tab2">
    <tr>
      <th width="">活动名称</th>
      <th>参与人数</th>
      <th>浏览次数</th>
      <th>开始时间/结束时间</th>
      <th width="305">操作</th>
    </tr>
    <% @lottery.each do |lottery| %>
      <tr>
        <td><%= lottery.name %></td>
        <td><%= 123 %></td>
        <td><%= 232 %></td>
        <td><%= lottery.stime %>至<%= lottery.etime %></td>
        <td width="305">
          <%= link_to "编辑", "/shop3_lottery/edit?id=#{lottery.id}" %>&nbsp;&nbsp;
          <a href="javascript:void(0)" onclick="ajaxApply('<%= lottery.id %>')">活动结束</a>&nbsp;&nbsp;
          <%= link_to "删除", "/shop3_lottery/destroy?id=#{lottery.id}" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
