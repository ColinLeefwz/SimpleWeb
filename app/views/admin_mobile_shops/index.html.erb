<h1>可创建手机网站的商家</h1>

<table border="1">
  <tr>
    <th>id</th>
    <th>名称</th>
    <th>区号</th>
    <th>分类</th>
    <th>百度分类</th>
    <th></th>
  </tr>

  <% @mobile_shops.each do |shop| %>
    <tr>
      <td><%=link_to  shop.id.to_i, "/admin_shops/show?id=#{shop.id}" %></td>
      <td><%= shop.name %></td>
      <td><%= shop.city_fullname %></td>
      <td><%= shop.show_t %></td>
      <td><%= type_or_user(shop) %></td>
      <td>
        <%= link_to "删除", "/admin_mobile_shops/destory?id=#{shop.id.to_i}" %>
      </td>
    </tr>
  <% end %>
</table>
<br />
<br />
<%= link_to "增加", "/admin_mobile_shops/new" %>