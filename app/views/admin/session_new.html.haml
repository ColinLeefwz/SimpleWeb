= content_for :head do
  = stylesheet_link_tag "bootstrap.css", media = "all"
  = javascript_include_tag "bootstrap.js"

%h3 Create a new session

= form_for @session, url: sessions_admin_index_path do |f|
  - if @session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@session.errors.count, "error")} prohibited this session from being saved:"
      %ul
        - @session.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :expert_id
    = f.select :expert_id, Expert.all.collect{ |e| [e.name, e.id]}
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'

= link_to 'Back', sessions_admin_index_path
