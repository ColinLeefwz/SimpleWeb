= render "shared/video_uploader"

= simple_form_for [:admin, @announcement] do |f|

  = render "shared/video_form_builder", f:f

  = f.input :title
  = f.input :description, input_html: {class: "ckeditor"}
  = f.input :language, collection: Language.all, label_method: :long_version, value_method: :combine_version, include_blank: false
  = f.input :cover
  = f.input :expert_id, as: :select, collection: Expert.all, selected: (Expert.staff.id)
  = f.input :categories, as: :check_boxes, collection: Category.all.map(&:name)
  = f.input :always_show

  = f.button :submit

:javascript
  upload_helper()
