= simple_form_for [:admin, @article] do |f|
  = f.input :title
  = f.association :expert, collection: Expert.all, selected: @article.expert
  = f.input :always_show
  = f.input :cover, as: :file # , hint: f.template.image_tag(f.object.cover.url)
  = f.input :description, :input_html => { :class => 'ckeditor' }
  = f.association :categories, as: :check_boxes, collection: Category.all
  = f.button :submit
