    <title>脸脸 | 商家管理后台</title>
    <link href="/stylesheets/backstage.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/jquery-1.6.2.min.js"></script>
    <!--[if IE 6]>
    <%= javascript_include_tag "DD_belatedPNG.js" %>

	<script type="text/javascript">
		DD_belatedPNG.fix('.logo2, .logo, .nav a.hover, .nav a:hover, .nav a.index:hover, .nav .s:hover, .nav .s.hover');

	</script>
