<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//WAPFORUM//DTD XHTML Mobile 1.0//EN" "http://www.wapforum.org/DTD/xhtml-mobile10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=0.5">
    <meta content="application/xhtml+xml; charset=UTF-8" http-equiv="Content-Type"/>
    <meta content="no-cache" http-equiv="Pragma"/>
    <meta content="no-cache" http-equiv="Cache-Control"/>
    <meta content="0" http-equiv="Expires"/>
    <meta name="keywords" content="脸脸，玩乐，娱乐，休闲" />
    <meta name="description" content="脸脸，玩乐，娱乐，休闲"  />
    <title>脸脸 | 后台</title>
    <link href="/stylesheets/backstage.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/jquery-1.6.2.min.js"></script>
    <script>
      $(document).ready(function(){
        $("#name").focus();
      });
    </script>
  </head>
  <body>
    <div class="area">
      <form action="" method="post">
        <div class="logo"> <img src="/images/backstage.jpg"></div>

        <div class="plane"><label>商家id</label>
          <%= text_field_tag :id, params[:id],:id => "name", :class => "txt", :onblur => "find_user($(this).val())" %>
          <span id="shopName"></span>
        </div>

        <div class="plane"><label for="pwd">密&nbsp;&nbsp;码</label>
          <%= password_field_tag :password, params[:password], :maxLength=>"16",:id =>'pwd', :class => 'txt'  %>
        </div>
        <div class="plane2">
          <a href="#" class="mt15 ml10">忘记密码?</a><input type="submit" value="登 录" class="btn"/>
          <span class="plane2inner">&copy; 2012 dface 浙ICP备11027288号<a href="http://www.dface.cn" class="fn ml15">WWW.DFACE.CN</a></span>
        </div>
      </form>
    </div>

  </body>
</html>

<script type="text/javascript">
  function find_user(uid){
    $.get("/shop_login/find_user",{id: uid}, function(data){
      $("#shopName").replaceWith("<span id='shopName'>" + data['text'] + "</span>")
    })
  }


</script>
