<div class="title2"><h2>聊天室</h2></div>

<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="20%" align="left">时间</th>
    <th width="10%" align="left">用户</th>
    <th width="8%" align="left">性别</th>
    <th width="8%" align="center">年龄</th>
    <th width="8%" align="center">微博</th>
    <th width="30%" align="center">内容</th>
    <th></th>
  </tr>
  <% @chats.each do |chat| %>

    <% user =   User.find_by_id(chat[0]) %>
    <tr>
      <td class="bold"><%= Time.at(chat[2]).strftime("%Y-%m-%d %H:%M:%S")%></td>
      <td class="bold"><%= user.try(:name) %></td>
      <td class="bold"><%= img_gender(user.try(:gender)) %></td>
      <td class="bold"><%= age(user.try(:birthday)) %></td>
      <td align="bold"><%= link_to('微博', user.weibo_home) if user.try(:weibo_home) %></td>
      <td align="bold"><%=gchat_img(chat[1]).html_safe %></td>
    </tr>
  <% end %>
</table>
<div class="pages mt15">
  <%= generate_paginate.html_safe %>
</div>

<script type ="text/javascript">
  LeftMenu(24);
</script>