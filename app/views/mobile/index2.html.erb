<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalabe=yes"/>
        <meta name="apple-mobile-web-app-capable" content="yes" />
		<meta content="no-cache" http-equiv="Cache-Control">
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
        <title><%= @shop.name %>-手机网站</title>
        <link rel="stylesheet" href="/cellphone/css/public.css" />
		<script src="/cellphone/js/jquery-1.6.2.min.js"></script>
		<script src="/cellphone/js/jquery.mobile-1.3.2.min.js"></script>
		<script src="/cellphone/js/public.js"></script>
    </head>
    <body >
        <div class="header">
			<h1><%= @shop.name %></h1>
			<a id="OpenMenu" alt="打开导航">打开导航</a>
			<div id="Menu">
			<a id="CloseMenu" alt="关闭导航"><span>关闭导航</span></a>
				<ul class="men">
					<li><a href=<%= "/mobile/index2?sid=#{@shop.id}" %> data-ajax="false">主页</a></li>
					<% if @mobile_space.menu.size>0 %>
					<% @mobile_space.menu.each do |m| %>
					<li><a href=<%= "/mobile/content?c=#{m}&sid=#{@shop.id}" %> data-ajax="false"><%= m %></a></li>
					<% end %>
					<% end %>
				</ul>
			</div>
		</div>

		<div id="DH">
			<div class="imgdiv">
			    <% if @mobile_welcome_banner %>
                <a href=<%= "#{@mobile_welcome_banner.url}" %> data-ajax="false">
                <%= image_tag( "#{MobileBanner.img_url(@mobile_welcome_banner.id)}?time=#{Time.now.to_i}", :style => "width:480px;height:202.5px" ) %>
                </a>
			    <% end %>
			    <% @mobile_banners.each do |mb| %>
				<a href=<%= "#{mb.url}" %> data-ajax="false">
				<%= image_tag( "#{MobileBanner.img_url(mb.id)}?time=#{Time.now.to_i}", :style => "width:480px;height:202.5px" ) %>
				</a>
				<% end %>
			</div>
			<div class="dhnum" id="DHNum">
			    <% @mobile_banners.each_with_index do |mb,index| %>
				<a href="javascript:void(0)" class="def selected"><%= index+1%></a>
				<% end %>
			</div>
		</div>

        <% @mobile_articles.each do |ma| %>
		<div class="box1">
		    
			<div class="box1left">
			<a href=<%= "/mobile_articles/show?id=#{ma.id}&sid=#{@shop.id}" %> target="blank" >
			<!-- <img src="images/pic4.jpg" width="100%"> -->
			<%= image_tag( "#{MobileArticle.img_url(ma.id, :t2)}?time=#{Time.now.to_i}", :style => "width:100%" ) %></div>
			<!-- <a href="#" data-ajax="false"> -->
				<h2><%= ma.title %> </h2>
				<p><%= ma.text %></p>
			</a>
			
		</div>
		<% end %>


		<% if @page1 %>
		<div class="box1">
			<div class="box1left">
			<a href=<%= "/mobile_articles/show?id=#{@contact_lianlian_page.id}&sid=#{@shop.id}" %> target="blank" >
			<%= image_tag( "#{MobileArticle.img_url(@contact_lianlian_page.id, :t2)}?time=#{Time.now.to_i}", :style => "width:100%" ) %>
			</div>
				<h2><%= @contact_lianlian_page.title %></h2>
                <p><%= @contact_lianlian_page.text %></p>
			</a>
		</div>
		<% end %>

		<% if @page2 %>
		<div class="box1">
			<div class="box1left">
			<a href=<%= "/mobile_articles/show?id=#{@welcome_page.id}&sid=#{@shop.id}" %>
			target="blank" >
			<%= image_tag( "#{MobileArticle.img_url(@welcome_page.id, :t2)}?time=#{Time.now.to_i}", :style => "width:100%" ) %>
			</div>
				<h2><%= @welcome_page.title %></h2>
				<p><%= @welcome_page.text %></p>
			</a>
		</div>
		<% end %>


