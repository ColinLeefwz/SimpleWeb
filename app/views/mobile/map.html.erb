
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalabe=yes"/>
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <title><%= @shop.name %>-手机网站</title>
        <link rel="stylesheet" href="/cellphone/css/public.css" />
		<script src="/cellphone/js/jquery-1.10.2.min.js"></script>
		<script type="text/javascript" src="http://api.map.baidu.com/api?v=1.2"></script>
		<script src="/cellphone/js/jquery.mobile-1.3.2.js"></script>
		<script src="/cellphone/js/public.js"></script>
    </head>
    <body >
        <div class="header">
			<a id="GoBack" alt="返回">返回</a>
			<h1><%= @shop.name %></h1>
			<a id="OpenMenu" alt="打开导航">打开导航</a>
			<div id="Menu">
				<a id="CloseMenu" alt="关闭导航"><span>关闭导航</span></a>
				<ul class="men">
                    <li><a href=<%= "/mobile_articles/mobile_show" %> data-ajax="false">主页</a></li>
					<% if @mobile_space.menu.size>0 %>
					<% @mobile_space.menu.each do |m| %>
					<li><a href=<%= "/mobile_articles/content?c=#{m}" %> data-ajax="false"><%= m %></a></li>
					<% end %>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="box2" id="Maps2"></div>

		<div id="Shadow" style="margin-top:10px;">
			<a href="#" class="sina">新浪</a>
			<a href="#" class="qq">腾讯微博</a>
			<a href="#" class="qqspace">QQ空间</a>
			<a href="#" class="renren">人人</a>
		</div>
		<div class="border1"></div>
		<div class="footer">
			<a href="tel:13606543127" class="btn1">电话</a>
			<a href="#" class="btn2">短信</a>
			<a href="" class="btn3" data-ajax="false">地图</a>
			<a class="btn4" id="Btn4">分享</a>
		</div>
<script type="text/javascript">
window.onload=function(){
document.getElementById("Maps2").style.height=$(window).height()-$(".header").height()-$(".footer").height()-60+"px";
var map =new BMap.Map("Maps2");            // 创建Map实例
var pp =new BMap.Point(<%= @shop.lo.nil? ? "120.128376,30.286706" : "#{@shop.lo[1]},#{@shop.lo[0]}" %>);    // 创建点坐标
map.addControl(new BMap.NavigationControl());  
map.addControl(new BMap.ScaleControl());                    // 添加比例尺控件
map.addControl(new BMap.OverviewMapControl());              //添加缩略地图控件
map.enableScrollWheelZoom();                  // 启用滚轮放大缩小。
map.centerAndZoom(pp,15);                     // 初始化地图,设置中心点坐标和地图级别。


var myIcon = new BMap.Icon("/cellphone/images/markers.png", new BMap.Size(23, 35), {   
offset: new BMap.Size(10, 35),
imageOffset: new BMap.Size(0, 0 + 10 * 1)
});
var myLabel = new BMap.Label('<%= @shop.name%>', {   
offset: new BMap.Size(20, 0)
});
var marker = new BMap.Marker(pp,{icon: myIcon, label: myLabel})
map.addOverlay(marker);    //添加marker到地图上
// var opts = {title : '<span style="font-size:14px;color:#0A8021">脸脸茶坊</span>'};
// var infoWindow =new BMap.InfoWindow("<div style='line-height:1.8em;font-size:12px;'><b>地址:</b>杭州西湖区文二路38号</br><b>星级:</b>&nbsp;<img src=images/sign7.gif  border=0 align=absmiddle>", opts);  // 创建信息窗口对象，引号里可以书写任意的html语句。
// marker.addEventListener("mouseover", function(){this.openInfoWindow(infoWindow);});
}
</script>
    </body>
</html>