<div class="title2"><h2><%= params[:cid].blank? ? "" : "'#{Coupon.find_by_id(params[:cid]).try(:name)}'" %>使用记录</h2></div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="35%" align="left" colspan="2">优惠券</th>
    <th width="13%" align="left">用户</th>
    <th width="8%" align="center">性别</th>
    <th width="8%" align="center">年龄</th>
    <th width="8%" align="center">微博</th>
    <th width="8%" align="center">收到时间</th>
    <th width="8%" align="center">查看时间</th>
    <th width="8%" align="center">使用时间</th>
    <th width="10%" align="center">消费数据</th>
  </tr>

  <%!@users.blank? && @uses.each do |use| %>
    <tr>
      <td width="10%"><%=image_tag use.coupon_img.try(:url,:t1), :class=>"imgs4" %></td>
      <td valign="center"><%= use.coupon_name %>
        <span class="gray f12">（<%= use.coupon_show_t2  %>）</span>
      </td>
      <td><%= use.user_name  %></td>
      <td align="center"><%= img_gender(use.user_gender)  %></td>
      <td align="center"><%= age(use.user_birthday.try(:to_date)) %></td>
      <td align="center"><%= link_to '微博',use.user_weibo_home %></td>
      <td align="center"><%= use.sat.since(8.hours).strftime("%Y-%m-%d %H:%M") if use.sat %></td>
      <td align="center"><%= use.vat.since(8.hours).strftime("%Y-%m-%d %H:%M") if use.vat %></td>
      <td align="center"><%= use.uat.since(8.hours).strftime("%Y-%m-%d %H:%M") %></td>
      <td align="center"><%= use.data %></td>
    </tr>
  <% end %>
</table>

<div class="pages mt15">
  <%= generate_paginate.html_safe %>
</div>

<script>
  LeftMenu(16);
</script>