<div class="title2"><h2>最新使用记录</h2></div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="35%" align="left" colspan="2">优惠券</th>
    <th width="13%" align="left">用户</th>
    <th width="10%" align="center">性别</th>
    <th width="13%" align="center">年龄</th>
    <th width="10%" align="center">微博</th>
    <th align="center">使用时间</th>
  </tr>

  <% @uses.each do |use| %>
    <tr>
      <% user = User.find_by_id(use[0]); coupon = Coupon.find(use[2])  %>
      <td width="10%"><%=image_tag coupon.img.try(:url,:t1), :class=>"imgs4" %></td>
      <td valign="center"><%= coupon.name %>
	  <span class="gray f12">（<%= coupon.show_t2  %>）</span>
	  </td>
      <td><%= user.name  %></td>
      <td align="center"><%= img_gender(user.gender)  %></td>
      <td align="center"><%= age(user.birthday.try(:to_date)) %></td>
      <td align="center"><%= link_to '微博',user.try(:weibo_home) %></td>
      <td align="center"><%= use[1].localtime.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
  <% end %>
</table>

<div class="pages mt15">
  <%= generate_paginate.html_safe %>
</div>

<script>
  LeftMenu(16);
</script>