<div class="title2"><h2>发布优惠券</h2></div>
<%= form_for(@coupon, :url => { :action => "update", :id => @coupon.id },:html => { :multipart => true } ) do |f| %>
  <div class="coupon">
    <div class="adiv">
      <%=  image_tag(@coupon.img) %>
    </div>
  </div>
  <ul class="formlist" class="mt0">
    <li>
      <label>标题&nbsp;&nbsp;</label>
      <%= f.text_field :name, :class => 'txt'  %>
    </li>
  </ul>
  <%= render :partial => 'form1', :locals => {:f => f}  %>
<% end %>

<%= link_to '返回列表', '/shop_coupons', :class=>"btn6 r" %>
