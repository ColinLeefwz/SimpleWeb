<div class="subtitle">优惠券详情</div>
<center class="gray2"><%= notice %></center>
<div class="coupon">
  <div class="adiv">
    <%=  image_tag(@coupon.img) %>
  </div>
</div>

<ul class="formlist2">

  <li>
    <span style="width: 100px;">使用规则:</span>
    <span class="right"><%= @coupon.show_rule%></span>
  </li>
  <% if [1,3].include?(@coupon.rule.to_i) %>
    <li>
      <span style="width: 100px;"><%= rulev_lable(@coupon.rule.to_i) %></span>
      <span class="right"><%= @coupon.rulev%></span>
    </li>
  <%  end %>

</ul>

