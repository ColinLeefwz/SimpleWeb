<div class="subtitle">编辑优惠券</div>
<%= form_for(@coupon, :url => { :action => "update", :id => @coupon.id },:html => { :multipart => true } ) do |f| %>
  <div class="coupon">
    <div class="adiv">
      <%=  image_tag(@coupon.img) %>
    </div>
  </div>
  <ul class="formlist" style="margin-top: 0px;">
    <%= render :partial => 'ratio',  :locals => {:f => f}  %>
    <li>
      <label>使用规则:</label>
      <%= f.select :rule, [['只能下载一次', 0],['只能一张未使用',1],['无限制', 2]], :class => "txt" %>
    </li>
    <li><input type="submit" value="提 交" class="btn"/></li>
  </ul>
<% end %>

<%= link_to '返回列表', '/shop_coupons' %>

