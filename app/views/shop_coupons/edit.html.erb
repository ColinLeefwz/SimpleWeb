<div class="title2"><h2>编辑优惠券</h2></div>

<%= form_for(@coupon, :url => shop_coupon_path(@coupon.id),:html => { :multipart => true, :id => 'cform' }) do |f| %>

  <%= render :partial => 'imgtext', :locals => {:f => f} if @coupon.t.to_i == 1  %>
  <%= render :partial => 'allimg', :locals => {:f => f} if @coupon.t.to_i == 2  %>
<%  end %>

<%= link_to '返回列表', '/shop_coupons', :class=>"btn6 r" %>

<script type="text/javascript">
  LeftMenu("6");
  function imgText(){
    $('#couponForm').show();
    $('#Sele').remove();
    $('#allImg').remove()
  }
  function allText(){
    $('#imgText').remove();
    $('#Sele').remove();
    $('#couponForm').show()
  }
</script>
