
<div class="subtitle">发布优惠券</div>

<div id="Sele" style="height: 306px;width: 610px;margin-top: 10px;margin-left: 50px;">
  <%= link_to '图文模式',"#", :onclick => "imgText()" %>
  <%= link_to '全图模式',"#", :onclick => 'allText()' %>
</div>

<div id="couponForm" style="display: <%= params[:action]=='new' ? 'none' : '' %>;">
  <%= form_for(@coupon, :url => '/shop_coupons/create',:html => { :multipart => true, :id => 'cform' } ) do |f| %>


    <div id="imgText">
      <div class="coupon">
        <input type="hidden" name="coupon[t]" value="1"/>
        <div class ='ldiv'>
          <input size="12" name="coupon[img2]" type="file" class="inputImg"  >
        </div>
        <div class="rdiv" >
          <%= f.text_field :name, :value => '点此输入名称', :class => 'stxt txt' %>
          <%= f.text_area :desc, :value => '点此输入描述', :class => 'stxt atxt',:wrap => "off"%>
        </div>
      </div>
      <%= render :partial => 'form1', :locals => {:f => f}  %>
    </div>

    <div id="allImg">
      <div class="coupon">
        <input type="hidden" name="coupon[t]" value="2"/>
        <div class="adiv">
          <input size="30" name="coupon[img2]" type="file" class="inputImg" style="margin-left:37px">
        </div>
      </div>
      <ul class="formlist" style="margin-top: 0px;">
        <li>
          <input type="submit" value="下一步" class="btn"/>
        </li>
      </ul>
    </div>
  <%  end %>
</div>

<%= link_to '返回列表', '/shop_coupons' %>

<script type="text/javascript">
  function imgText(){
    $('#couponForm').show();
    $('#Sele').remove();
    $('#allImg').remove()
  }
  function allText(){
    $('#imgText').remove();
    $('#Sele').remove();
    $('#couponForm').show()
  }
</script>

