
<div class="subtitle">发布优惠券</div>

<div id="Sele" style="height: 306px;width: 610px;margin-top: 10px;margin-left: 50px;">
  <%= link_to '图文模式',"#", :onclick => "imgText()" %>
  <%= link_to '全图模式',"#", :onclick => 'allText()' %>
</div>


<div id="imgText" style="display: none">
  <%= form_for(@coupon, :url => '/shop_coupons/create',:html => { :multipart => true } ) do |f| %>
    <div class="coupon">
      <div class ='ldiv'>
        <input size="12" name="coupon[img]" type="file" class="inputImg"  >
      </div>
      <div class="rdiv" >
        <%= f.text_field :name, :value => '点此输入名称', :class => 'stxt txt',:onclick => "$(this).val('')" %>
        <%= f.text_area :desc, :value => '点此输入描述', :class => 'stxt atxt',:onclick => "$(this).val('')"%>
      </div>
    </div>
    <ul class="formlist" style="margin-top: 0px;">
      <li><input type="submit" value="发 布" class="btn"/></li>
    </ul>
  <% end %>
</div>

<div id="allImg" style="display: none">
  <%= form_for(@coupon, :url => '/shop_coupons/create',:html => { :multipart => true } ) do |f| %>
    <div class="coupon">
      <div class="adiv">
        <input size="30" name="coupon[img]" type="file" class="inputImg" style="margin-left:37px"  >
      </div>
    </div>
    <ul class="formlist" style="margin-top: 0px;">
      <li><input type="submit" value="发 布" class="btn"/></li>
    </ul>
  <% end %>
</div>

<%= link_to '返回列表', '/shop_coupons' %>

<script type="text/javascript">
  function imgText(){
    $('#imgText').show();
    $('#Sele').remove();
    $('#allImg').remove()
  }
  function allText(){
    $('#imgText').remove();
    $('#Sele').remove();
    $('#allImg').show()
  }
</script>
