<div class="title2"><h2>编辑优惠券</h2></div>
<%= form_for(@coupon, :url => shop_coupon_path(@coupon.id),:html => { :multipart => true, :id => 'cform' }) do |f| %>
  <div id="imgText">
    <div class="coupon">
      <div class ='ldiv'>
        <input size="12" name="coupon[img2]" type="file" class="inputImg"  >
      </div>
      <div class="rdiv" >
        <%= f.text_field :name,  :class => 'stxt txt' %>
        <%= f.text_area :desc, :class => 'stxt atxt',:wrap => "off"%>
      </div>
    </div>
    <ul class="formlist">
      <li>
        <label id="lt">关键字：</label>
        <%= f.text_field :text, :class => "txt"%>
      </li>
      <li>
        <input type="submit" value="发 布" class="btn"/>
      </li>
    </ul>
  </div>
<% end %>

<%= link_to '返回列表', '/shop_coupons', :class=>"btn6 r" %>