<div class="subtitle">优惠券列表</div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="25%" class="first">名称</th>
    <th width="10%">缩略图</th>
    <th width="35%">详情</th>
    <th width="5%" align="center">查看</th>
    <th width="5%" align="center">下载</th>
    <th width="5%" align="center">使用</th>
  </tr>
  <% @coupons.each do |coupon| %>
    <tr>
      <td><%= coupon.name %></td>
      <td align="center" class="gray"><%=image_tag coupon.img.url(:t1) %></td>
      <td align="center" class="gray"><%=truncate( coupon.desc, :length => 20)  %></td>
      <td align="center" class="gray"><%= link_to '查看', shop_coupon_path(coupon) %></td>
      <td align="center" class="gray"><%= link_to coupon.users.to_a.count, {:action => 'users', :id => coupon.id, :flag => 'down'} %></td>
      <td align="center" class="gray"><%= link_to coupon.users.to_a.count{|s| s['uat']},{:action => 'users', :id => coupon.id, :flag => 'use'} %></td>
    </tr>
  <% end %>
  <tr class="bottom">
    <td align="left"><%= link_to '发布优惠券', '/shop_coupons/new', :class=>'btn' %></td>
    <td colspan="3" align="right">
      <%= generate_paginate.html_safe %>
    </td>
  </tr>
</table>



