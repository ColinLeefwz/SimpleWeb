<div class="subtitle"><%={'down' => "下载", "use"=> '使用'}[params[:flag]]%>用户</div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="20%" class="first">姓名</th>
    <th width="20%">性别</th>
    <th width="20%">生日</th>
    <th width="20%" align="center"><%= {'down'=> "下载", "use"=> '使用'}[params[:flag]]%>时间</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <% user = User.find(u["id"])   %>
      <td><%= user.name %></td>
      <td align="center" class="gray"><%= user.show_gender %></td>
      <td align="center" class="gray"><%= user.birthday.try(:to_date)   %></td>
      <td align="center" class="gray"><%= (u[{'down'=> "dat", "use"=> 'uat'}[params[:flag]]].to_datetime+8.hours).strftime("%Y-%m-%d %H:%M:%S") %></td>
    </tr>
  <% end %>
  <tr class="bottom">
    <td align="left"><%= link_to "返回", '/shop_coupons' %></td>
    <td colspan="3" align="right">
      <%= generate_paginate.html_safe %>
    </td>
  </tr>
</table>
