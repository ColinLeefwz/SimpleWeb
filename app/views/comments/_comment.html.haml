.comment.clearfix{id: dom_id(comment)}
  %header
    %span.author
      = comment.user.name
    %time
      = time_ago_in_words(comment.updated_at) + " ago"
  %section
    = comment.content
  %footer
    = link_to("delete", comment_path(comment), method: :delete, remote: true, data: {confirm: "Please confirm the deletion"}) if can? :destroy, comment
