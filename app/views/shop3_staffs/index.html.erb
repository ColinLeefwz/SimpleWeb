<script type="text/javascript">
  function ajaxDeleteStaff(obj, id){
    if(confirm("确定删除该员工？"))
      $.post("/shop_staffs/ajax_delete_staff",{id: id}, function() {
        obj.parent().parent().remove();
      });
  }
</script>

