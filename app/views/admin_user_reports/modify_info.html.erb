<div class="container" id="admin_shop_info">
  <%= form_for(@shop, :url => "/admin_user_reports/update_shop_info") do |f| %>
    <%= hidden_field_tag :id, @shop.id.to_i %>
    <div class="row">
      <div class="col-md-2 text-right">
        地点名称:
      </div>
      <div class="col-md-10">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 text-right">
        地点地址:
      </div>
      <div class="col-md-10">
        <%= text_field :shop_info, :addr%>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 text-right">
        地点电话:
      </div>
      <div class="col-md-10">
        <%= text_field :shop_info, :phone %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 text-right">
        地点类型:
      </div>
      <div class="col-md-10">
        <%= f.select :t,options_for_select(import_t, @shop.t)  %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 text-right">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>
      <div class="col-md-2">
        <%= link_to "取消", "/admin_user_reports/index", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<style type="text/css">
  #admin_shop_info .row{
    margin: 10px;
  }
</style>
