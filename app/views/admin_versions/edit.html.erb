<h1>编辑版本<%=@version.id%></h1>
<%= form_for(@version, :url => "/admin_versions/update") do |f| %>
  <%= hidden_field_tag :id, @version.id %>

  <p>
    功能描述:<br />
    <%= f.text_area :desc %>
  </p>

  <p>
    强制升级:
    <%= f.check_box :upgrade %>
  </p>

  <p>
    <%= f.submit "提交"%>
  </p>
<%  end %>