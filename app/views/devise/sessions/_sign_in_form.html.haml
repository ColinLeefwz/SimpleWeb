= form_for resource, :as => resource_name, :url => user_session_path, html: {class: "form-horizontal"} do |f|
  .form-group
    .col-sm-4
      = f.label :email, class: "control-label"
    .col-sm-7
      = f.email_field :email, placeholder: "Email", autofocus: true, class: 'form-control'

  .form-group
    .col-sm-4
      = f.label :password, class: "control-label"
    .col-sm-7
      = f.password_field :password, placeholder: "Password", class: 'form-control'
  .form-group
    = f.check_box :remember_me
    = f.label "remember me for 2 weeks"

  .form-group
    = f.submit "Sign in", class: 'btn btn-prodygia'

