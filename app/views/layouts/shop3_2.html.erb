<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= session_shop.name %>APP管理</title>
    <link href="/newbackstage/css/public.css" rel="stylesheet" type="text/css">
    <!--[if IE]>
	<link href="/newbackstage/css/ie.css" rel="stylesheet" type="text/css">
	<![endif]-->
    <%= yield :header_css %>
    <script src="/newbackstage/js/jquery-1.6.2.min.js"></script>
    <script src="/newbackstage/js/jquery.cookie.js"></script>
    <script src="/newbackstage/js/public.js" type="text/javascript"></script>
    <%= yield :header_js %>
    <script type="text/javascript" src="/ueditor/editor_all.js"></script>
    <script type="text/javascript" src="/ueditor/editor_config.js"></script>

    <%= yield :ahead %>
    <script type="text/javascript">
      var navmove = ($.cookie('navmove')==null?$.cookie( 'navmove', 'off', { path: '/' } ):$.cookie('navmove')), runing;
    </script>
    <script type="text/javascript">
    $(function(){
      $(".food").click(function(){
        $("#food #submit").click();
      });
      $(".trade").click(function(){
        $("#trade #submit").click();
      });
      $(".caitu").click(function(){
        $("#caitu #submit").click();
      });
    });
    </script>
  </head>

  <body>
    <div class="main">	  
	  <div class="header2">
			<a href="/mobile"><img src="/newbackstage/images/logo3.png" class="logo"/></a>
			<div class="header2_change">
				<a class="hover" href="http://shop.dface.cn/shop3_login/login2?id=21835801&amp;hash=57329899a9ec2a7585dfd5a6d545b703">APP管理<span class="arrow"></span></a>
				<a href="/mobile/index">手机网站</a>
				<a href="/mobile_weixin">微信营销</a>
				<a href="/mobile_user/index">账户设置</a>
			</div>
			<a href="/shop3_login/logout" class="r f14 mr70 mt25">退出</a>
			<span class="r f14 mr20 mt25"><%= link_to session_shop.name, "/shop3_login" %></span>
			<div class="clear1"></div>
		</div>
	  
      <div id="Nav" class="nav2">
        <div id="Navcon" class="nav2con">
          <a href="/shop3_login" style="padding-top:80px;">首页</a>
          <span class="navline"></span>
          <% if session[:shop_id].in?($travel) ||  ENV["RAILS_ENV"] != "production"%>
            <a href="/shop3_lines">拓展功能</a>
          <%end%>
          <span class="navline" style="display:none"></span>
          <a href="/shop3_coupons/list">优惠券管理</a>
          <span class="navline"></span>
          <a href="/shop3_faqs">问答系统</a>
          <span class="navline"></span>
          <a href="/shop3_data">数据统计</a>
          <span class="navline"></span>
          <a href="/shop3_content/user_photo">照片墙管理</a>
          <span class="navline"></span>
          <a href="/shop3_content/gchat">聊天室管理</a>
          <span class="navline"></span>
          <a href="/shop3_checkins?page=1">签到管理</a>
          <span class="navline"></span>
          <a href="/shop3_staffs">商家设置</a>
          <span class="navline"></span>
          <a href="/shop3_menu">自定义菜单</a>
          <span class="navline"></span>
          <% if session_shop.has_caitu_purview? %>
            <%= link_to "猜图管理", "javascript:void(0)", :target => '_blank', :class => 'caitu' %>
            <span class="navline"></span>
          <% end %>
          <% unless session_shop.shops.blank? %>
            <a href="/shop3_subshops">内部商家</a>
          <% end %>
          <span class="navline"></span>

          <% if session_shop.id == 21835409 %>
            <a href="/shop3_case/new">动态案例</a>
            <span class="navline"></span>
          <% end %>

          <% if $redis.smembers("MobileShops").include?session_shop.id.to_s %>
          <a href="/shop3_mobile/index3">手机网站</a>
          <span class="navline"></span>
          <% end %>

          <% if session_shop.has_food_purview? %>
            <a href="#" class="food">点菜管理</a>
            <span class="navline"></span>
          <% end %>

          <% if session_shop.has_trade_purview? %>
            <a href="#" class="trade">订单管理</a>
            <span class="navline"></span>
          <% end %>

          <a href="/shop3_login/logout">
            <%= session[:admin_sid] ? "返回总店" : "退出" %>
          </a>
          <span class="navline"></span>
          <label id="CB1" class="checkboxs1 none">取消动画</label>
          <span class="navline"></span>
          <a id="Btn" class="none"><img src="/newbackstage/images/sign1.png" align="absmiddle"/> 固定左侧导航</a>
        </div>
      </div>
      <div class="clear1"></div>

      <%= yield %>

    </div>

    <div style="display:none;">
      <form action="http://food.dface.cn/admin/sessions" id="food" name="food" method="post" target="_blank">
        <input type="hidden" name="sid" value="<%= session[:shop_id] %>">
        <input type="hidden" name="hash" value="<%= Digest::SHA256.hexdigest(session[:shop_id].to_s + "12191008")[0,32] %>">
        <input type="submit" name="submit" id="submit">
      </form>
      <form action="http://trade.dface.cn/admin/sessions" id="trade" name="trade" method="post" target="_blank">
        <input type="hidden" name="sid" value="<%= session[:shop_id] %>">
        <input type="hidden" name="hash" value="<%= Digest::SHA256.hexdigest(session[:shop_id].to_s + "12191008")[0,32] %>">
        <input type="submit" name="submit" id="submit">
      </form>
      <form action="http://caitu.dface.cn/login" id="caitu" name="caitu" method="post" target="_blank">
        <input type="hidden" name="id" value="<%= session[:shop_id] %>">
        <input type="hidden" name="hash" value="<%= Digest::SHA256.hexdigest('caitu'+session[:shop_id].to_i.to_s)[0,32] %>">
        <input type="submit" name="submit" id="submit">
      </form>
    </div>

  </body>
</html>
