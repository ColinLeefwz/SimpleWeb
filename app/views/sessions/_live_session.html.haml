.white-background.shadow
  = simple_form_for(@session, url: @url, remote: true) do |f|
    %h3 Create new session
    .form-group
      .col-sm-2
        = f.label :title, class: "control-label"
      .col-sm-6
        = f.text_field :title, class: 'form-control', input_html: { id: 'session-title-input' }
    //= f.input :title, input_html: { id: "session-title-input"}
    .categories
      .col-sm-2
        = f.label :categories, class: "control-label"
      = f.input :categories, collection: Category.all.map(&:name), as: :check_boxes, required: true, class: 'checkbox-inline', label: false
      //= f.input :categories, collection: Category.all.map(&:name), as: :check_boxes
    .language
      .col-sm-2
        = f.label :language, class: "control-label"
      = f.input :language, collection: Language.all, label_method: :long_version, value_method: :combine_version, include_blank: false, label: false
    = f.input :format, collection: %w(Lounge Forum Livestreaming), as: :select
    = f.input :cover, input_html: {id: "session-cover-input"}
    = f.label :current_image
    - if f.object.cover.url
      #cover-image
        = image_tag(f.object.cover.url)
    = f.input :video, input_html: {id: "session-video-input"}
    .start_date
      = f.label :date
      #datepicker.input-group.date
        = f.text_field :date, data: {format: "yyyy-MM-dd"}, type: "text"
        %span.input-group-addon
          %i{ data: { time_icon: "icon-time", date_icon: "icon-calendar"}}
    .start_time
      = f.label :start_at
      #starttimepicker.input-group.date
        = f.text_field :start_time, data: {format: "hh:mm"}, type: "text"
        %span.input-group-addon
          %i{ data: { time_icon: "icon-time", date_icon: "icon-calendar"}}
    .end_time
      = f.label :end_at
      #endtimepicker.input-group.date
        = f.text_field :end_time, data: {format: "hh:mm:ss"}, type: "text"
        %span..input-group-addon
          %i{ data: { time_icon: "icon-time", date_icon: "icon-calendar"}}
    = f.input :time_zone, input_html: {id: "session-timezone-input"}
    = f.input :location, input_html: {id: "session-location-input"}
    = f.input :price, input_html: {id: "session-price-input"}
    = f.label :strategic_question
    .ckeditor
      = f.text_area :strategic_question
    %br
    %br
    %br
    = f.label :description
    .ckeditor
      = f.text_area :description, input_html: { class: "session-description-input"}

    = render "session_submit", { modal: 'live_session_modal', f: f }
