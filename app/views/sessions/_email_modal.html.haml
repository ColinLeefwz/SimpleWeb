#email-modal.hide.modal.fade{ tabindex: '-1', role: "dialog", aria: {labelledby: "emailModal", hidden: "true"} }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ type: "button", data: { dismiss: 'modal' }, aria: { hidden: "true "} }x
        %h3#email-modal-label
          Mail to Your Friend
      .email-modal-body
        = simple_form_for :email_friend, { url: email_friend_session_path } do |f|
          = f.input :your_name, input_html: {value: current_user.try(:name) }
          = f.input :your_address, input_html: {value: current_user.try(:email) }
          = f.input :to_name
          = f.input :to_address
          = f.input :content, as: :text
          = f.submit "cancel", class: "btn"
          = f.submit "post", class: "btn btn-primary"
