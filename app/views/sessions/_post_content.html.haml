= simple_form_for(@session, url: @url, remote: true)  do |f|
  %h3 Post a new Content
  = f.input :title, input_html: { id: 'session-title-input' }
  = f.input :cover
  = f.input :description, input_html: { class: 'ckeditor' }, input_html: {class: 'session-description-input'}
  .categories
    = f.input :categories, collection: Category.all.map(&:name), as: :check_boxes


  = f.submit Session::COMMIT_TYPE[:draft], class: 'btn dashboard-buttons'
  %a#session-preview{href: '#modal', role: 'button', class: 'btn dashboard-buttons', data:{toggle: "modal"}} Preview
  = f.submit Session::COMMIT_TYPE[:publish], class: 'btn dashboard-buttons'

  #modal.modal.hide.fade{tabindex: '-1', role: 'dialog', aria:{labelledby: 'modalLabel'}, aria:{hidden: 'true'}}
    .modal-body
      .text-page-header-box
        .text-page-left-side
          .text-page-portrait
            = image_tag("#{current_user.avatar.url}")
          .text-page-expert-name
            %span by #{current_user.name}
          .clear-fix.visible-phone
        .text-page-right-side
          .text-page-social-buttons
            = render 'shared/social_share', session_title: 'title', session_url: 'url'
          .text-page-category-name
            #article-session-categories
        .clear-fix
      .text-page-article-box
        .text-page-title#session-title
          %p originally published on example time
        .text-page-main-content#article-session-description
    .modal-footer
      %button.btn{data:{dismiss:'modal'}, aria:{hidden:'true'}} Close
      = f.submit Session::COMMIT_TYPE[:publish], class: 'btn btn-primary modal-submit'
