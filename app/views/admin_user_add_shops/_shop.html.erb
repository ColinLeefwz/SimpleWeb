<div class="row md_addr">
	<span class="sp-lab">创建者:</span><%= @shop.user_name %>
</div>
<div class="row md_addr">
	<span class="sp-lab">用户级别:</span>
	<% if $redis.sismember('KxUsers', @shop.user_id) %>
		<span>(可信)</span>
	<% elsif $redis.sismember('CoUsers', @shop.user_id) %>
		<span>(授权)</span>
	<% else %>
		<span>普通用户</span>
	<% end %>
</div>
<div class="row md_addr">
	<span class="sp-lab">签到次数:</span><%= @shop.utotal %>
</div>
<div class="row md_addr">
	<span class="sp-lab">用户选择的商家类型:</span> <%= @shop.show_t %>
</div>
<div class="row md_addr">
	<span class="sp-lab">区号: </span><%= @shop.city %>
</div>
<div class="row md_addr">
	<span class="sp-lab">城市: </span><%= @shop.city_name %>
</div>
<div class="row md_addr">
	<span class="sp-lab">百度经纬度:</span>
	<% if @shop.lo && @shop.lo.first.is_a?(Array)%>
        <% @shop.lo.each do |lo| %>
          <%= lo.reverse %><br>
        <% end %>
      <% else %>
        <%= @shop.lo.reverse %><br>
      <% end %>
	<a href="http://api.map.baidu.com/lbsapi/getpoint/index.html" target="_blank">查找百度经纬度</a>
</div>
<div class="row md_addr">
	<span class="sp-lab">计算经纬度:</span><input type="text" name="lob2" id="lob2"/>
	<a href="#" id="calculate-distance">计算距离</a>
</div>
<div class="row md_addr">
	<span class="sp-lab">附近的重复商家: </span><br>
	<div id="nearShops"></div>
</div>
