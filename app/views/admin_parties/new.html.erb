<h1>发布新活动</h1>
<script src="/javascripts/My97DatePicker/WdatePicker.js"></script>

<%= form_for(@party, {:url => admin_parties_path} ) do |f| %>
  <div class="field">
    <%= f.label "活动地点商家id" %><br />
    <%= f.text_field :rsid %>
  </div>
  <div class="field">
    <%= f.label "活动名称" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "起始时间" %><br />
    <input type="text" size="30" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm'})" name="party[ftime]">
  </div>
  <div class="field">
    <%= f.label "截止时间" %><br />
    <input type="text" size="30" onclick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm'})" name="party[etime]">
  </div>

  <p>
    <%= f.submit "发布" %>
  </p>
<% end %>

<%= link_to '返回列表', admin_parties_path %>
