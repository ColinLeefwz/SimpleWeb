<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <title><%= @shop.try(:name) %>评价</title>
    <link href="/stylesheets/mini.css" rel="stylesheet"  type="text/css" media="screen"/>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.min.js"></script>
    <script>
      $(document).ready(function(){
        var high=$(document).scrollTop()+($(window).height()-200)/2;
        $(".box2").css("margin-top",high+"px");

        $("form").submit(function(){
          if($('#hmark').val()==''){
            $(".pj").html("<span class='red'>点击星星打分</span>");
            return false;
          }
        })

      });
      function Star(num){
        switch(num){
          case 1:{$(".star").css("background-position","left -120px");$(".pj").html("<span class='red'>很差</span>");$('#hmark').val(1);break;}
          case 2:{$(".star").css("background-position","left -90px");$(".pj").html("<span class='red'>差</span>");$('#hmark').val(2);break;}
          case 3:{$(".star").css("background-position","left -60px");$(".pj").html("<span class='red'>还行</span>");$('#hmark').val(3);break;}
          case 4:{$(".star").css("background-position","left -30px");$(".pj").html("<span class='red'>好</span>");$('#hmark').val(4);break;}
          case 5:{$(".star").css("background-position","left 0px");$(".pj").html("<span class='red'>很好</span>");$('#hmark').val(5);break;}
        }
			
      }
    </script>
  </head>



  <body class="bg1">
    <div id="Main2">

      <div class="box2">
        <form action="/shop_marks/create" method="post">
          <div class="title2">评价：<%= @shop.try(:name) %></div>
          <div class="box2left">评 分：</div>
          <div class="box2right">
            <div class="starbox">
              <div class="star">
                <a onclick="Star(1)">1</a>
                <a onclick="Star(2)">2</a>
                <a onclick="Star(3)">3</a>
                <a onclick="Star(4)">4</a>
                <a onclick="Star(5)">5</a>
              </div>
            </div>
            <div class="pj">点击星星打分</div>
          </div>
          <div class="box2clear"></div>
          <div class="box2left">评 语：</div>
          <div class="box2right">
            <input type="hidden" name="mark" id="hmark"/>
            <%= hidden_field_tag :sid, params[:sid] %>
            <%= hidden_field_tag :uid, params[:uid] %>
            <%= hidden_field_tag :gid, params[:gid] %>
            <textarea class="ta" name="com"></textarea>
          </div>
          <div class="box2clear"></div>
          <div class="box2left">&nbsp;</div>
          <div class="box2right">
            <input type="submit" class="btn2 ml20" value="提 交"/>
          </div>
      </div>
    </form>

  </div>
</body>
</html>