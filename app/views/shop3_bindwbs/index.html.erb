<div class="con">
  <div class="title1 mb30"><h2 class="f18">商家设置</h2></div>
  <div class="submenu">
    <ul>
      <li><a href="/shop3_infos">基本设置</a></li>
      <li><a href="/shop3_pass">修改密码</a></li>
      <li><a href="/shop3_staffs">员工管理</a></li>
      <li class="hover"><a href="/shop3_bindwbs">绑定微博</a></li>
      <li><a href="/shop3_bans">屏蔽用户</a></li>
      <li><a href="/shop3_marks">用户评分</a></li>
      <li><a href="/shop3_notice">公告管理</a></li>
    </ul>
  </div>
  <% if @bind_wb.new_record? %>
    <%= form_for(@bind_wb, :url => '/shop3_bindwbs/create',:html => {  :id => 'cform' } ) do |f| %>
      <% if @bind_wb.errors.any? %>
        <div id="error_explanation">
          <h2>绑定出错了</h2>
          <ul>
            <% @bind_wb.errors.messages.each do |k,msg| %>
              <li><%= msg.join('') %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <table width="750" border="0" cellspacing="0" cellpadding="0" class="tab1 mt40">
        <tr >
          <td colspan="2" align="center" class="orange1">您还没有绑定微博,现在就来绑定吧</td>
        </tr>

        <tr>
          <td width="17%" align="right" valign="top" class="pr20">微博登录名</td>
          <td><%= f.text_field :login_name, :class => "inputs2 mb10"%>
		       <span class="gay4 ml10">如:lianlian@126.com</span>
		  </td>
        </tr>

        <tr>
          <td width="17%" align="right" valign="top" class="pr20">微博UID</td>
          <td><%= f.text_field :wb_uid, :class => "inputs2 mb10"%>
		  <span class="gay4 ml10">如:123456. 来自:http://weibo.com/u/123456</span>
		  </td>
        </tr>

        <tr>
          <td width="17%" align="right" valign="top" class="pr20">微博昵称</td>
          <td><%= f.text_field :name, :class => "inputs2 mb10"%><span class="gay4 ml10">如: 脸脸</span></td>
        </tr>

        <tr>
          <td>&nbsp;</td>
          <td><input type="submit" name="Submit" value="提 交" class="btn2 l"/> </td>
        </tr>
      </table>
    <%  end %>

  <%  else %>
    <table width="100%" cellspacing="0" cellpadding="0" class="tab2">
      <tr id="Tr0">
        <th width="487">微博ID</th>
        <th width="377">登录名</th>
        <th width="244">微博昵称</th>
        <th width="264">&nbsp;</th>
      </tr>
      <tr id="Tr1">
        <td valign="middle"><%= @bind_wb.wb_uid %></td>
        <td><%= @bind_wb.login_name %></td>
        <td width="244" align="center"><%= @bind_wb.name %></td>
        <td width="264" align="center">
          <%= link_to "微博", @bind_wb.weibo_home, :target => "_blank" %>
          <%= link_to '解除', '/shop3_bindwbs/del', :id => "wbdel" %></td>
      </tr>
    </table>
  <% end %>
</div>

<script src="/newbackstage/js/shop_info.js" type="text/javascript"></script>
<script defer="defer">
$(document).ready(function(){
	runing=$("#CB1").attr("class");
	if(runing=="checkboxs1"){
		NavDiv();
		$(window).load(function(){
			MessageDiv();
		});
	}else if(runing=="checkboxs2"){
		AllNoDH();
	}
  
	$(".tab2 tr:odd").addClass("trbg");
	
	$("#wbdel").click(function(){
		if(!confirm("确定解除微博绑定么？"))
	  return false;
	});
});
</script>