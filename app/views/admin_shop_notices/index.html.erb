<h1>商家公告</h1>
<%= javascript_include_tag "jquery-1.6.2.min.js" %>
<style>
  p{margin: 7px auto}
</style>

<%= form_tag '/admin_shop_notices',:method =>:get do %>
  <p>
    区号: <%= text_field_tag :city, params[:city], :size => 5  %>
    商家名称: <%= text_field_tag :shop, params[:shop], :size => 20  %>
    (*区号和商家必须同时查询,否则无效,可以不填)
  </p>
  <p>
    商家id:<%= text_field_tag :sid, params[:sid],:size => 10 %>
    有效: <%= select_tag :effect,options_for_select([['所有',''],['是',1],['否',2]],params[:effect].to_i)  %>
  </p>
  <p>
    <%= submit_tag "查 找" %>
  </p>
<% end %>

<table border="1">
  <tr>
    <th>商家id</th>
    <th>商家名称</th>
    <th>文本</th>
    <th>排序</th>
    <th>有效</th>
    <th></th>
  </tr>

  <% @shop_notices.each do |shop_notice| %>
    <tr>
      <td><%= shop_notice.shop.try(:id).try(:to_i) %></td>
      <td><%= shop_notice.shop.try(:name) %></td>
      <td><%= shop_notice.title %></td>
      <td><%= shop_notice.ord %></td>
      <td><%= shop_notice.effect ? "是": "否" %></td>
      <td><%= link_to "前三条", "/admin_shop_notices/show?shop_id=#{shop_notice.shop_id}" %></td>
    </tr>

  <% end %>


</table>
<%= generate_paginate.html_safe %>