- content_for(:title) { @article.title }

.container
  .col-md-12.col-sm-12.col-xs-12
    = render "sessions/page_header", item: @article, link_path: subscribe_path(@article, type: @article.class.name)

    .detail.shadow.clearfix
      .video-cover
        = image_tag @article.cover.url
      %article
        = @article.description.html_safe

    = render partial: "comments/comments", locals: {commentable: @article}

-# hidden modals
= render "shared/sign_in_modal"
