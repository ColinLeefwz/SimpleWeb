= form_for @propose_topic do |f|
  - if @propose_topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@propose_topic.errors.count, "error")} prohibited this propose_topic from being saved:"
      %ul
        - @propose_topic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Name 
    *
    %br= f.text_field :Name

  .field
    = f.label :Location
    ='*'
    %br= f.text_field :Location

  .field
    = f.label :Email
    ='*'
    %br= f.email_field :Email

  .field
    = f.label :Topic
    ='*'
    %br= f.text_area :Topic

  .actions
    = f.submit 'submit'
