= form_for @expert do |f|
  - if @expert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expert.errors.count, "error")} prohibited this expert from being saved:"
      %ul
        - @expert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
