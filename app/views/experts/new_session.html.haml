
.dash-wrapper
  .container-fluid
    .row-fluid
      .span3.side-menu
        = render 'side_menu'
      .span9.main-menu
        = simple_form_for @live_session, url: { action: "create_session" } do |f|
          %h3 Create new session
          = f.input :title
          .categories
            = f.input :categories, collection: Category.all.map(&:name), as: :check_boxes 
          = f.input :format, collection: %w(Lounge Forum Livestreaming), as: :select
          = f.input :cover
          = f.input :video
          = f.input :date, as: :date
          = f.input :start_time, as: :time
          = f.input :end_time, as: :time
          = f.input :time_zone
          = f.input :price
          = f.label :strategic_question
          = f.text_area :strategic_question
          %br
          = f.label :description
          = f.text_area :description
          -# = f.button :save_draft
          -# = f.button :preview
          %br
          = f.button :submit
