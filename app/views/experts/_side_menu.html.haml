.expert-info
  .expert-avatar
    = image_tag(@expert.avatar.url)
  .expert-text-info
    %h4= @expert.name
    %p= @expert.expert_profile.title
    %p= @expert.expert_profile.company
    %p= link_to 'edit profile'
  .clear-fix
  .toolkit
    .item
      = render 'item_icon', item_name: 'activity_stream'
      .item-text #{link_to 'My activity stream', remote: true}
.block-title
  %span
    CREATE
.toolkit
  .item
    = render 'item_icon', item_name: 'new_content'
    .item-text #{link_to 'Post new content', new_post_content_expert_path(current_user), remote: true }
  .item
    = render 'item_icon', item_name: 'new_session'
    .item-text #{link_to 'Create new session', new_live_session_expert_path(current_user), remote: true}
  .item
    = render 'item_icon', item_name: 'private_session'
    .item-text #{link_to 'Schedule private session', pending_page_expert_path, remote: true}
.block-title
  %span
    MANAGE
.toolkit
  .item
    = render 'item_icon', item_name: 'content'
    .item-text #{link_to 'Content', pending_page_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'new_session'
    .item-text #{link_to 'Sessions', sessions_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'video_library'
    .item-text #{link_to 'Video on demand', pending_page_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'testimonials'
    .item-text #{link_to 'Testimonials', pending_page_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'refer_expert'
    .item-text #{link_to 'Refer new experts', refer_new_expert_experts_path, remote: true }
.block-title
  %span
    VIEW
.toolkit
  .item
    = render 'item_icon', item_name: 'community'
    .item-text #{link_to 'Feedback', pending_page_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'calendar'
    .item-text #{link_to 'Calendar', pending_page_expert_path, remote: true}
  .item
    = render 'item_icon', item_name: 'statistics'
    .item-text #{link_to 'Statistics', pending_page_expert_path, remote: true}
%br
.toolkit
