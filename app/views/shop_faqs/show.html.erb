      <div><image src="<%= "#{ShopFaq.img_url(@shop_faq.id)}?time=#{Time.now.to_i}" %>" class="imgs2"/></div>
    </div>
  <% end %>
  <div class="headers3">
    <image src="<%= @shop_faq.shop.logo.try(:img) || '/images/smalllogo.png'%>" class="imgs"/>
    <div><%= @shop_faq.text %></div>
  </div>
  <div class="submit01"></div>
</div>
