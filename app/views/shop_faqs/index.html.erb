<div class="subtitle">问答列表</div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="10%">序号</th>
    <th width="10%">标题</th>
    <th width="8%" align="center">内容</th>
    <th width="8%" align="center">图片</th>
    <th width="8%" align="center">删除</th>
  </tr>
  <% @shop_faqs.each do |faq| %>
    <tr>
      <td align="center" class="gray"><%= faq.od    %></td>
      <td align="center" class="gray"><%= faq.title  %></td>
      <td align="center" class="gray"><%= faq.text  %></td>
      <td align="center" class="gray"><%=image_tag faq.img.url(:t2)  %></td>
      <td align="center" class="gray"><%= link_to '删除', '#', :onclick => "ajaxDel($(this), '#{faq.id}')" %></td>
    </tr>
  <% end %>
  <tr class="bottom">
    <td align="left"><%= link_to '新    建', '/shop_faqs/new', :class=>'btn' %></td>
  </tr>
</table>
<script type ="text/javascript">
  function ajaxDel(obj, faq_id){
    if(confirm("确定删除此优惠券么？"))
    {
      $.get("/shop_faqs/ajax_del",{id: faq_id}, function(data) {
        if(data['text']){
          obj.parent().parent().remove();
        }
        else{
          obj.replaceWith('删除失败.')
        }
      });
    }
  }
</script>