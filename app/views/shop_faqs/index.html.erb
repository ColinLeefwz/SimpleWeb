<div class="title2"><h2>问答列表</h2></div>

<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="10%" align="left">序号</th>
    <th width="20%" align="left">标题</th>
    <th width="45%" align="left">内容</th>
    <th width="10%" align="center">图片</th>
    <th></th>
  </tr>
  <% @shop_faqs.each do |faq| %>
    <tr>
      <td class="bold"><%= faq.od%></td>
      <td><%= faq.title  %></td>
      <td><%= faq.text  %></td>
      <td align="center"><%=image_tag faq.img.url(:t2), :class=>"imgs2"  %></td>
      <td align="center">
	  <a href="#" class="mr10">编辑</a>
	  <%= link_to '删除', '#', :onclick => "ajaxDel($(this), '#{faq.id}')" %></td>
    </tr>
  <% end %>
</table>
<div class="pages mt15">
	<%= link_to '新建问答', '/shop_faqs/new', :class=>'btn3 l' %>
	<div class="pagination r">
		<a href="#" class="first_page">第一页</a>
		<a href="#" class="prev_page">上一页</a>
		<span class="current">第<input type="text" value="1">页</span>
		<a href="#" class="sum_page">共2页</a>
		<a href="#" class="next_page">下一页</a>
		<a href="#" class="last_page">最后页</a>
	</div>
</div>
	
<script type ="text/javascript">
  LeftMenu(15);
  function ajaxDel(obj, faq_id){
    if(confirm("确定删除此优惠券么？"))
    {
      $.get("/shop_faqs/ajax_del",{id: faq_id}, function(data) {
        if(data['text']){
          obj.parent().parent().remove();
        }
        else{
          obj.replaceWith('删除失败.')
        }
      });
    }
  }
</script>