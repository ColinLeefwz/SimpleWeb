<div class="title2"><h2>问答系统</h2>设置常见问题，提高服务效率</div>


<div id="Notice" class="notice">
  <% if @shop_faq.errors.any? %>
    <div id="error_explanation">
      <h2>新建问答系统出错</h2>
      <ul>
        <% @shop_faq.errors.messages.values.each do |msg| %>
          <li><%= msg.join(' ') %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= form_for(@shop_faq, :url => '/shop_faqs/create',:html => { :multipart => true, :id => 'cform' } ) do |f| %>

  <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab3">
    <tr>
      <td width="8%">序号</td>
      <td><%= f.select :od, ["01","02","03","04","05","06","07","08","09"] - session_shop.faqs.map{|m| "0#{m.od.to_i}"},{}, {:class => "p2"} %></td>
      <td rowspan="5"><img src="../images/pic6.jpg" /></td>
    </tr>
    <tr>
      <td valign="top">标题</td>
      <td>
        <%= f.text_field :title, :class => "inputs", :value=>"获取wifi密码", :id=>"Inputs" %>
        <span class="words">(3-12个字,例如:获取wifi密码)</span>
      </td>
    </tr>

    <tr>
      <td valign="top">图片</td>
      <td>
        <div class="relative">
          <input type="button" value="添加图片" class="btn1" id="Btn1"/>
          <span id="imgName" class="words"></span>
          <span class="words">(可以添加店内菜单、最新活动、宣传海报等图片<br/>
            图片支持格式:jpg jpeg gif png)</span>
           <%= f.file_field :img, :class => "btn_file10" %>
        </div>
      </td>
    </tr>
    <tr>
      <td valign="top">回答</td>
      <td>
        <%= f.text_area :text, :class => "textareas"%>
        <span class="words">(3-140个字,例如：本店wifi密码：321123)</span>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <br/>
        <input type="submit" value="提 交" class="btn3 ml50 l"/><%= link_to '返回列表', '/shop_faqs', :class=>"link1" %></td>
    </tr>
  </table>
<%  end %>

<script type ="text/javascript">
  LeftMenu(15);
  $("#Btn1").click(function(){
    $("#shop_faq_img").click();
  });
  $("#Inputs").focus(function(){
    if($(this).val() == '获取wifi密码')
      $(this).val("");
  });
  $('#shop_faq_img').change(function(){
    $('#imgName').text($(this).val())
  })
</script>