<% content_for :html_header do %>
  <title>用户登录</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'global' %>
  <%= stylesheet_link_tag 'register' %>
<% end %>

<% content_for :body_tag do %>
  <body onload="$('name').focus();">
  <% end %>

  <%no_nav%>
  <div id="main">
    <div class="step-nav">
      <a href="/">首页</a> &gt; <a href="/user_login/login">用户登录</a>
    </div>
    <div class="box">
      <h2>用户登录</h2>
      <div id="right-kuang">
        <p class="act notice"><%= flash[:notice] %></p>
        <%= form_tag do %>
          <div id="box-yhm">
            <p>
            <div class="box-mima"><label for="user_name" class="color-2010">登录名</label></div>
            <%= text_field_tag :name, params[:name], :maxLength=>"16" %>
            </p>
          </div>
          <div id="box-yhm">
            <p>
            <div class="box-mima"><label for="user_password" class="color-2010">密码</label></div>
            <%= password_field_tag :password, params[:password], :maxLength=>"16" %>
            </p>
          </div>

          <div id="box-yhm">
            <p class="act">
              <%= submit_tag " 登 录 ", :class => "submit" %>
            </p>
          </div>
          <div id="box-yhm1">
          <%end%>
          <p class="agreement">
          </p>
        </div>
      </div>
    </div>
    <div class="bottom"></div>
  </div>

