<h1>商家签到排行</h1>
<table>
  <tr>
    <th>商家</th>
    <th>ip</th>
    <th>签到次数</th>
    <th>最后签到时间</th>
  </tr>

  <% @ips.each do |ip, value| %>
    <tr>
      <td><%= @checkin_shop_stat.shop.name%></td>
      <td><%=link_to ip.gsub('/','.'), "/ip_checkin_stats?ip=#{ip.gsub('/','.')}" %></td>
      <td><%=link_to value.first, {:action => 'ips_list', :ip => ip.gsub('/', '.'), :sid => @checkin_shop_stat.id }%></td>
      <td><%=id_to_time(value.last).to_date%></td>

    </tr>

  <% end %>
</table>
