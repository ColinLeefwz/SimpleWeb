<h1></h1>
<table border="1">
  <tr>
    <th>时间</th>
    <th>用户</th>
    <th>发送给</th>
    <th>内容</th>
  </tr>

  <% @chats.each do |chat| %>
    <tr>
      <td><%=Time.at(chat[3]).strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%=link_to chat[0], "/admin_users/show?id=#{chat[0]}" %><%= User.find_by_id(chat[0]).try(:name) %></td>
      <td><%=link_to chat[1], "/admin_users/show?id=#{chat[1]}" %><%= User.find_by_id(chat[1]).try(:name) %></td>
      <td><%=chat_img(chat[2]).html_safe %></td>
    </tr>

  <% end %>
</table>


