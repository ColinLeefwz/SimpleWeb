
<div class="subtitle">公告列表</div><br/>


<%= form_tag 'shop_shop_notices', :method => :get  do  %>
  查看状态： <%= select_tag :effect, options_for_select([['有效','1'], ['过期','0'],['所有','']], params[:effect]), :class => 'stxt' %>
  <%= submit_tag '确定', :class => "sbtn" %>
<% end  %>


<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="40%" class="first">文本</th>
    <th width="14%">排序</th>
    <th width="8%" align="center">有效</th>
    <th width="5%" align="center"></th>
    <th width="5%" align="center"></th>
    <th width="5%" align="center"></th>
    <th width="5%" align="center"></th>
  </tr>
  <% @shop_notices.each do |shop_notice| %>
    <tr>
      <td align="left" class="gray"><%= shop_notice.title %></td>
      <td align="center" class="gray"><%= shop_notice.ord %></td>
      <td align="center" class="gray"><%= shop_notice.effect ? '是' : '否' %></td>
      <td align="center" class="gray"><%= link_to '详情', shop_shop_notice_path(shop_notice) %></td>
      <td align="center" class="gray"><%= link_to '编辑', edit_shop_shop_notice_path(shop_notice) if shop_notice.effect %></td>
      <td align="center" class="gray"><%= link_to '过期',{:action => 'dest', :id => shop_notice.id }, :onclick => "return confirm('确定过期么？')" if shop_notice.effect %></td>
      <td align="center" class="gray"><%= link_to '置顶',{:action => 'top', :id => shop_notice.id }, :onclick => "return confirm('确定置顶么？')" if shop_notice.effect %></td>
    </tr>
  <% end %>
  
  <tr class="bottom">
    <td align="left"><%= link_to '发布公告', new_shop_shop_notice_path, :class => "btn" %></td>
    <td colspan="3" align="right">
    <%= generate_paginate.html_safe %>
    </td>
  </tr>
</table>

