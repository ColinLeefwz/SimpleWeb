%h2.text-center
  Edit User
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal"}) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, class: "control-label password-setting-label"
    .controls.password-setting-control
      = f.email_field :email, :autofocus => true 
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group
    = f.label :password, class: "control-label password-setting-label"
    .controls.password-setting-control
      = f.password_field :password, :autocomplete => "off", placeholder: "if you want to change it"
  .form-group
    = f.label :password_confirmation, class: "control-label password-setting-label"
    .controls.password-setting-control
      = f.password_field :password_confirmation
  .form-group
    = f.label :current_password, class: "control-label password-setting-label"
    .controls.password-setting-control
      = f.password_field :current_password, placeholder: "to confirm your identity"
  .form-group
    .controls.password-setting-control
      = f.submit "Update", class: 'btn'
      = link_to "Back", :back, class: 'btn'
