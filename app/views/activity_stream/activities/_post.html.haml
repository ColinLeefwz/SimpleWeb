.cover
  = link_to image_tag(object.cover.url), polymorphic_path(object)
.content
  - if current_user == subject
    = "You posted #{object.class.name.downcase}"
    = link_to "\"#{object.title}\"", polymorphic_path(object)
  - else
    = link_to "#{subject.name}", polymorphic_path([:profile, subject])
    = "posted #{object.class.name.downcase}"
    = link_to "\"#{object.title}\"", polymorphic_path(object)
