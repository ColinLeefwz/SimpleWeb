<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5, user-scalable=yes">
    <meta content="no-cache" http-equiv="Pragma"/>
    <meta content="no-cache" http-equiv="Cache-Control"/>
    <meta content="0" http-equiv="Expires"/>
    <title>地点纠错|脸脸</title>
    <link href="/phone2/css/style.css" rel="stylesheet" type="text/css">
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.min.js"></script>
    <style>
      .ne_list div {
        font-size: 30px;
        height: 128px;
        margin-right: 20px;
        vertical-align: middle;
      }
      .ff {float: right}


      .s{
        border-bottom: 1px solid #ABABAB;
        color: #000000;
        display: block;
        font-size: 34px;
        margin: 0 4px;
        overflow: hidden;
        padding: 0 60px 0 20px;
      }

      .s span{
        height: 60px;
        padding-top: 20px;
      }

      .rbtn1{
        background:url('/images/btn/pic1.png') no-repeat scroll left top transparent;
        border: medium none;
        cursor: pointer;
        float: left;
        height: 58px;
        width: 122px;
        font-size: 30px;
      }
      .rbtn2{
        background:url('/images/btn/pic2.png') no-repeat scroll left top transparent;
        border: medium none;
        cursor: pointer;
        float: left;
        height: 58px;
        width: 122px;
        font-size: 30px;
      }

    </style>
    <script type="text/javascript">
      function showDig(hid){
        $('#dig').css({"height":$("#main").height()+"px","display":"block"});
        $('#des').val('');
        $('#sid').val(hid)
        $('#res').css('background-color', '#0000FF');
        $("#boxss").css("top",($(document).scrollTop()+200)+"px");
      }
      function ajaxReport(uid){
        des = $('#des').val();
        if(des.length >= 3){
          sid = $('#sid').val();
          $.get('/aroundme/report', {sid: sid, des: des, uid: uid}, function(){
            $('#dig').hide();
            $('#shop'+sid).remove();
          })
        }
        else
          $('#res').css('background-color', '#ff0000')
      }
      function hidReport(){
        $('#dig').hide();
      }
    </script>
  </head>
  <body>
    <div id="main">
      <div style="position:absolute;width: 100%; height:100%;font-size: 30px;background: url(/images/btn/dig.png);display: none" id="dig">
        <div style="position:absolute;background-color:#fff;left:10%;width:80%;height:200px;" id="boxss">
          <div style="background-color:#00FFCC; width: 100%; height:46px;padding-top:10px;" id="res">
            请输入三字以上的错误原因
          </div>
          <div>
            <input class="text4" type="text" name="des" style="margin-top:15px;margin-left:20px;width:90%" id="des" >
            <input type="hidden" name="sid" id="sid">
            <br/>
            <input class="rbtn1 ml15 mt4" type="submit" value="完 成" onclick="ajaxReport('<%= params[:uid] %>')">
            <input class="rbtn2 ml15 mt4" type="submit" value="取 消" onclick="hidReport()">
          </div>
        </div>
      </div>
      <div id="con">


        <div class="set" style="width:90%">
          <% @shops.each do |shop| %>
            <div class="s" id="shop<%=shop[1]%>">
              <span style="float: left;"> <%= shop[0]  %>  </span>
              <span class="ff" onclick ="showDig('<%=shop[1] %>')" > 报错  </span>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </body>
</html>