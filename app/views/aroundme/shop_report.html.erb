<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5, user-scalable=yes">
    <meta content="no-cache" http-equiv="Pragma"/>
    <meta content="no-cache" http-equiv="Cache-Control"/>
    <meta content="0" http-equiv="Expires"/>
    <title>地点纠错|脸脸</title>
    <link href="/stylesheets/mini.css" rel="stylesheet" type="text/css">
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.min.js"></script>
    <script type="text/javascript">
      function showDig(hid){
		var high=$(window).height()/2;
        $('#dig').css({"height":$("#Main2").height()+"px","display":"block"});
        $('#sid').val(hid)
        $('#res').css('background-color', '');
        $("#boxss").css({"top":($(document).scrollTop()+high)+"px","margin-top":"-225px"});
      }
      function ajaxReport(uid){
        des = $('#des').val();
        if(des.length >= 3){
          sid = $('#sid').val();
          $.get('/aroundme/report', {sid: sid, des: des, uid: uid}, function(){
            $('#dig').hide();
            $('#shop'+sid).remove();
          })
        }
        else
          $('#res').css('background-color', '#ff0000')
      }
      function hidReport(){
        $('#dig').hide();
      }
    </script>
  </head>
  <body class="hidden">
    <div id="Main2">
      <div id="dig">
        <div id="boxss">
		  <ul>
			<li><input type="radio" id="1" name="radio_bad" action-type="switch" value="1"><label for="1" >地点不存在</label></li>
			<li><input type="radio" id="2" name="radio_bad" action-type="switch" value="2"><label for="2" >地点重复</label></li>
			<li><input type="radio" id="3" name="radio_bad" action-type="switch" value="3"><label for="3" >地点更名</label></li>
			<li><input type="radio" id="4" name="radio_bad" action-type="switch" value="4"><label for="4" >无用地点</label></li>
		  </ul>
            <input class="tex" type="text" name="des" id="des">
            <input type="hidden" name="sid" id="sid">

            <div class="clear1"></div>
            <!--<p style="width: 100%; height:46px;padding:10px 0 0;color:#000" id="res">
              请输入三字以上的错误原因
            </p>--!>
            <div class="line"></div>
            <div class="clear"></div>
            <input class="btn5" type="submit" value=" " onclick="ajaxReport('<%= params[:uid] %>')">
            <input class="btn6" type="submit" value=" " onclick="hidReport()">
          </div>
      </div>
	  
      <div class="con2">
        <div class="set">
          <% @shops.each do |shop| %>
            <div class="shop" id="shop<%=shop[1]%>">
              <span class="shopName"> <%= shop[0]  %>  </span>
              <span class="ff" onclick ="showDig('<%=shop[1] %>')" > 报错  </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>