
%ul.nav.navbar-nav.navbar-right
  - if user_signed_in?
    %li
      = link_to image_tag("dashboard_icon.png"), dashboard_path, "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "dashboard"
    %li.dropdown
      = link_to (image_tag(current_user.avatar.url) + content_tag(:b, "", class: "caret")), "#", data: { placement: "bottom", toggle: "dropdown" }, title: "settings"
      %ul.dropdown-menu
        %li
          = link_to (image_tag("dropdown_settings_icon.png") + " " + content_tag(:span, "Settings")), dashboard_settings_path, data: { placement: "bottom", toggle: "tooltip" }, title: "settings"
        %li
          = link_to (image_tag("signout_icon.png") + " " + content_tag(:span, "Sign out")),  destroy_user_session_path, method: :delete, data: { placement: "bottom", toggle: "tooltip" }, title: "Log out"
  - else
    %li
      = link_to image_tag("welcome_video_icon.png", class: 'tooltips', title: "Welcome video", data:{placement: "bottom"}), "#tip-modal", data:{toggle: "modal"}
    %li
      = link_to image_tag("user_icon.png"), new_user_registration_path, "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Sign up"
    %li.session_user
      = link_to image_tag("signin_icon.png"),'#sign-in-modal', data:{toggle: "modal"},"data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Sign in"
