- @categories = Category.all

#logo_container
  #logo.pull-left
    = link_to image_tag("logo.png"), root_url(subdomain: false), {:title => "Home", :rel => "home"}

  #user-session.pull-right
    = render 'shared/user_session'
  .fixed

- if @show_category == true
  %nav
    %ul.visible-desktop

      %li.category
        %a.filters{href: "#all", data: {filter: '*'}}all

      - @categories.each do |category|
        %li.category
          %a.filters{href: "##{category.name}", data: {filter: ".#{category.name.downcase()}"}}
            = category.name
      %li#format
        %a format
        %ul.subcategory
          %li.filters{href: "#video", data: {filter: '.videointerview'}} video
          -# %li.filters{href: "#live", data: {filter: '.livesession'}} live
          %li.filters{href: "#article", data: {filter: '.articlesession'}} article
          %li.filters{href: "#announcement", data: {filter: '.announcement'}} announcement

    %select#collapsed_navbar.span12.hidden-desktop
      %option.filters{data: {filter: '*'}} all
      - @categories.each do |category|
        %option.filters{data: {filter: ".#{category.name}"}}
          = category.name
- else
  %nav
