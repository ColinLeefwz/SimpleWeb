#content.container
  - @sessions.each do |session|
    .item
      .box-header
        .portrait
          = image_tag(session.expert.image_url)
          = session.expert.name
        .content-type
          -if session.content_type.eql?"LiveSession"
            = image_tag("livestreaming.png")
          -elsif session.content_type.eql?"ArticleSession"
            = image_tag("text.png")
          -elsif session.content_type.eql?"VideoSession"
            = image_tag("video.png")
          %p= session.content_type
      .title
        = session.title.titleize
      -if session.video_url
        .cover
          .video-img{data: {source: session.video_url}}
            = image_tag session.cover.url, class: 'video-play'
            = image_tag "video_play_icon.png", class: 'play-video-icon'

      -elsif !session.cover.url.eql?""
        .cover
          = image_tag(session.cover.url)
      -else 

      .caption
        - if (session.cover.url) && (!session.cover.url.eql?"")
          %p= truncate(session.description, length: 300)
        - else 
          %p= truncate(session.description, length: 600)
        - if session.content_type.eql?"LiveSession"
          %p= link_to 'Learn more', video_page_path(session)
        - else
          %p= link_to 'Continue reading', text_page_path(session)
        = social_share_button_tag("asd")
        = render 'linked_in_share_button'
