
<div class="subtitle">签到列表</div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab">
  <tr>
    <th width="17%" class="first">用户</th>
    <th width="9%">性别</th>
    <th width="17%" align="center">生日</th>
    <th width=27%" align="center">签到时间</th>
    <th width="9%" align="center"></th>
    <th width="9%" align="center"></th>
  </tr>


  <% @checkins.each do |checkin| %>
    <tr class="gray">
      <td><%=link_to checkin.user.name, :class=>"black"%></td>
      <td align="center"><%= checkin.user.show_gender%></td>
      <td align="center"><%= checkin.user.birthday.try(:to_date)%></td>
      <td align="center"><%= checkin.cat.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= link_to '历史签到', url_for(:action => 'index', :uid => checkin.user.id) %></td>
      <td><%= link_to '链接到微博', checkin.user.weibo_home %></td>
    </tr>
  <% end %>
  <tr class="bottom">
    <td align="left"></td>
    <td colspan="3" align="right">
      <%= generate_paginate.html_safe %>
    </td>
  </tr>
</table>

