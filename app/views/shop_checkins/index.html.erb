<h1>签到列表</h1>
<table>
  <tr>
    <th>商家</th>
    <th>用户</th>
    <th>性别</th>
    <th>签到时间</th>
    <th>经纬度</th>
    <th>ip</th>
    <th></th>
    <th></th>
  </tr>

  <% @checkins.each do |checkin| %>
    <tr>
      <td><%= session_shop.name %></td>
      <td><%= checkin.user.name %></td>
      <td><%= checkin.gender %></td>
      <td><%= checkin.cat.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= checkin.loc %></td>
      <td><%= checkin.ip %></td>
    </tr>
  <% end %>
</table>


